<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Add a new castle</h1>

      <%= simple_form_for @castle do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>