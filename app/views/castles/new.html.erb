<div id="castles-new-container">
  <div class="castles-new-card">
    <div>
    <div class="d-flex justify-content-between">
      <h1>Add a new castle!</h1>
      <%= link_to  "X", root_path, class: "boton-de-cancelar" %>
    </div>
    <%= simple_form_for @castle do |f| %>
      <%= f.input :name %>
      <%= f.input :city %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_day %>      
      <%= f.input :photo, as: :file %>
      <%= f.button :submit, class: 'btn btn-dark' %>
    <% end %>
    </div>
  </div>
</div>
