<%= form_tag root_path + "#explore", method: :get do %>
  <div class="input-group">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a Castle by Name or Country"
    %>
    <div class="input-group-append">
      <%= submit_tag "Search", class: "btn btn-dark" %>
    </div>
  </div>
<% end %>